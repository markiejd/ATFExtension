{
  "name": "line-context-menu",
  "displayName": "Line Context Menu",
  "description": "Adds a right-click command that operates on a single selected line.",
  "version": "0.0.1",
  "publisher": "local",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lineContextMenu.useSelectedLine",
        "title": "Generate ATF Step Method (C#)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "lineContextMenu.useSelectedLine",
          "when": "editorTextFocus",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "vscode:prepublish": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.5"
  }
}
